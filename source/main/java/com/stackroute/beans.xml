<?xml version="1.0" encoding="utf-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id = "movie" class = "com.stackroute.domain.Movie">
        <constructor-arg name="actor"/>
        <bean class="com.stackroute.domain.Actor"/>
    </bean>



    <bean id = "actor" class = "com.stackroute.domain.Actor">
        <constructor-arg name = "name" value = "Magnolia JR" />
        <constructor-arg name="gender" value = "Female" />
        <constructor-arg name="age" value="23"/>
    </bean>

    <bean class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Magnolia" />
        <constructor-arg name="age" value="23" />
        <constructor-arg name="gender" value="female" />
    </bean>


</beans>